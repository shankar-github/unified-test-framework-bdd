<?xml version="1.0" encoding="UTF-8"?>

<suite name="Cucumber Test Suite" parallel="true" thread-count="4">
    <test name="Cucumber Tests">
        <classes>
            <class name="runners.TestRunner"/> <!-- Ensure this points to the correct class -->
        </classes>
    </test>

    <listeners>
        <!-- Correct Allure Listener class name -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        
        <!-- Custom listener -->
        <listener class-name="listeners.TestNGListener"/>
    </listeners>
</suite>
